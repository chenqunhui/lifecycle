<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC
  "-//APACHE//DTD LOG4J 1.2//EN" "http://logging.apache.org/log4j/1.2/apidocs/org/apache/log4j/xml/doc-files/log4j.dtd">
<log4j:configuration debug="false" xmlns:log4j="http://jakarta.apache.org/log4j/">
	
	<!-- 配置控制台输出 -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Encoding" value="UTF-8"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%p][%d{MM-dd HH:mm:ss.SSS}][%t][%c:%L]: %m%n" />
		</layout>
	</appender>
	
	<appender name="file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/logs/advetise-track-web/advetise-track-web.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%p][%d{MM-dd HH:mm:ss.SSS}][%t][%c:%L] >>> %m%n" />
		</layout>
	</appender>
	
	<appender name="schedulerLog" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/logs/advetise-track-web/shcedulerLog.log" />
		<param name="DatePattern" value="'.'yyyy-MM-dd"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%p][%d{MM-dd HH:mm:ss.SSS}][%c{1}:%L] >>> %m%n" />
		</layout>
	</appender>

	<logger name="org.springframework">
		<level value="WARN" />
	</logger>
	
	<logger name="com.babytree.advertise.common.cache.refreshable">
		<level value="debug"/>
	</logger>
	
	<logger name="com.babytree.advertise.backend.refresher">
		<level value="debug"/>
	</logger>
	
	<logger name="com.babytree.advertise.backend.mq">
		<level value="debug"/>
	</logger>
	
	<logger name="com.babytree.advertise.backend.schedule.AdvertiseCacheSynchronizeTask">
		<level value="info"/>
		<appender-ref ref="schedulerLog"/>
	</logger>
	
	<logger name="java.sql">
		<level value="warn" />
	</logger>
	
	<root>
		<level value="INFO" />
		<appender-ref ref="console" />
		<appender-ref ref="file" />
	</root>
	
</log4j:configuration>